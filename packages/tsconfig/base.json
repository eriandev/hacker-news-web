{
  "$schema": "https://json.schemastore.org/tsconfig",

  "compilerOptions": {
    "strict": true,
    "target": "ESNext",
    "module": "ESNext",
    "isolatedModules": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "verbatimModuleSyntax": true,
    "moduleResolution": "bundler",
    "forceConsistentCasingInFileNames": true
  }
}
