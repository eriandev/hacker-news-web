{
  "extends": "tsconfig/web.json",
  "compilerOptions": {
    "paths": {
      "@/*": ["./src/*"],
      "__mocks__/*": ["./__mocks__/*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "next-env.d.ts",
    "next.config.js",
    "postcss.config.js",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
